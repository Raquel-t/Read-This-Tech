<div class="post">
    <h1>{{title}}</h1>
    <p>Posted by {{user.username}} on {{format_date date_created}}
    {{#if date_updated}}
    (last updated on {{format_date date_updated}})
    {{/if}}
    </p>
    <div>{{content}}</div>
    
    <h3>Comments</h3>
    <ul>
        {{#each comments as |comment|}}
            <li>
                <strong>{{comment.user.username}}</strong> ({{format_date comment.date_created}}): {{comment.text}}
            </li>
        {{/each}}
    </ul>

    <div class="comments-section">
        <!-- Form to add new comment -->
        <form action="/api/comments" method="post" class="add-comment-form">
            <textarea name="text" placeholder="Add your comment..."></textarea>
            <input type="hidden" name="post_id" value="{{id}}">
            <button type="submit" class="btn btn-secondary">Add Comment</button>
        </form>
    </div>
</div>
<script src="/js/comment.js"></script>