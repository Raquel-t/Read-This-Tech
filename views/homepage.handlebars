<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 blog-post">
  <div class="col-md-5">
    <h2>
      {{{get_emoji post.mood}}}
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{truncate_text post.content 200}}
    </p>
    <p>{{post.comments.length}} comments</p>
  </div>
</div>
{{/each}}
